{
  "compilerOptions": {
    "target": "es2017",           
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",     
    "noImplicitReturns": true,  
    "noUnusedLocals": false,
    "esModuleInterop": true,    
    "outDir": "lib", 
    "forceConsistentCasingInFileNames": true,           
    "sourceMap": true,
    "strict": true,                              
    "skipLibCheck": true                                 
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
