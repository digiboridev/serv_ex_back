{
  "name": "serve_expert_backend",
  "scripts": {
    "debug:nodemon": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "debug:tsw": "tsc --watch",
    "build": "npm i && tsc",
    "build:ts": "tsc",
    "build:docker": "docker build -t se_back .",
    "start": "node lib/index.js",
    "start:docker": "docker stop se_back && docker rm se_back || true && docker run -d --name se_back -p 3000:3000 se_back"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@fastify/cors": "^8.2.1",
    "@fastify/websocket": "^8.1.0",
    "@prisma/client": "^4.16.1",
    "@types/jsonwebtoken": "^9.0.2",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.17.0",
    "fastify-sse-v2": "^3.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.2.2",
    "prisma": "^4.16.1",
    "qs": "^6.11.2",
    "queueable": "^5.3.1",
    "redlock": "^5.0.0-beta.2"
  },
  "devDependencies": {
    "@types/node": "^20.3.2",
    "@types/qs": "^6.9.7",
    "@types/ws": "^8.5.5",
    "typescript": "^5.0.4"
  },
  "private": true
}
